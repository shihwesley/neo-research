{
  "description": "neo-research hooks: auto-index WebFetch and Context7 content into knowledge store",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "mcp__context7__query-docs",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/context7-to-mv2.sh",
            "timeout": 10
          }
        ]
      },
      {
        "matcher": "WebFetch",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/.venv/bin/python3 ${CLAUDE_PLUGIN_ROOT}/scripts/webfetch-to-mv2.py",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
